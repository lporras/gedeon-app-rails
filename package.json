{
  "name": "holymusic_app_rails",
  "private": true,
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "tailwindcss": "3.4.15"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^8.0.0-beta.2",
    "chord-charter": "file:./vendor/charter",
    "daisyui": "^3.0.22",
    "esbuild": "^0.25.0"
  },
  "scripts": {
    "build": "yarn build:css && esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "watch": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets --watch=forever",
    "build:css": "./node_modules/.bin/tailwindcss -c tailwindcss.config.js -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css",
    "build:css:watch": "./node_modules/.bin/tailwindcss -c tailwindcss.config.js -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/tailwind.css --watch --poll",
    "postinstall": "cd vendor/charter && npm install",
    "heroku-postbuild": "yarn build"
  }
}
