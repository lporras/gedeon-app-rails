<div class="flex justify-end p-4">
  <label class="flex items-center gap-2 cursor-pointer">
    <span class="text-sm">Dark Mode</span>
    <input 
      type="checkbox" 
      class="theme-toggle" 
      data-theme-controller="true"
    />
  </label>
</div>

<style>
  .theme-toggle {
    --tglbg: white;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    width: 3rem;
    height: 1.5rem;
    background: #d1d5db;
    border-radius: 9999px;
    position: relative;
    cursor: pointer;
    border: 2px solid #d1d5db;
    transition: all 0.3s ease;
  }
  
  .theme-toggle:checked {
    background: #ed74b8;
    border-color: #ed74b8;
  }
  
  .theme-toggle::before {
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
    width: 1.125rem;
    height: 1.125rem;
    background: white;
    border-radius: 50%;
    transition: transform 0.3s ease;
  }
  
  .theme-toggle:checked::before {
    transform: translateX(1.375rem);
  }
</style>
