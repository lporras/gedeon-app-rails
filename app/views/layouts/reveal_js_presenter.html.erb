<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <%= javascript_include_tag "cable" %>
    <title>Presenter</title>
    <style>
      *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

      html, body {
        width: 100%; height: 100%;
        overflow: hidden;
        background: #000;
        font-family: "Source Sans Pro", Helvetica, sans-serif;
        color: #fff;
      }

      /* ── Slide container ── */
      #presenter {
        position: relative;
        width: 100vw;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      /* ── Individual slide ── */
      .slide {
        position: absolute;
        inset: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 4vh 6vw;
        opacity: 0;
        transition: opacity 0.5s ease;
        pointer-events: none;
      }
      .slide.active {
        opacity: 1;
        pointer-events: auto;
      }

      /* ── Typography ── */
      .slide h2 {
        line-height: 1.2;
        color: #fff;
        text-align: center;
        word-wrap: break-word;
        overflow-wrap: break-word;
        max-width: 90vw;
      }

      .slide .verse-text {
        line-height: 1.4;
        color: #fff;
        text-align: center;
        word-wrap: break-word;
        overflow-wrap: break-word;
        white-space: normal;
        max-width: 90vw;
      }

      .slide .scripture-ref {
        color: #aaa;
        font-style: italic;
        margin-top: 0.4em;
        text-align: center;
      }

      /* ── Image slide ── */
      .slide.image-slide {
        padding: 0;
      }
      .slide img {
        width: 100vw;
        height: 100vh;
        object-fit: contain;
      }
    </style>
  </head>
  <body>
    <div id="presenter">
      <%= yield %>
    </div>
    <script>
      function fitText(slide) {
        var target = slide.querySelector('.verse-text') || slide.querySelector('h2');
        if (!target) return;

        // Make slide temporarily visible for measurement
        var wasActive = slide.classList.contains('active');
        if (!wasActive) {
          slide.style.transition = 'none';
          slide.style.opacity = '0';
          slide.classList.add('active');
        }

        var padH = window.innerWidth * 0.12;  // 6vw each side
        var padV = window.innerHeight * 0.08; // 4vh each side
        var maxW = window.innerWidth - padH;
        var maxH = window.innerHeight - padV;

        // Force a fixed width so text wraps and we can measure height
        target.style.width = maxW + 'px';

        var ref = slide.querySelector('.scripture-ref');
        if (ref) ref.style.width = maxW + 'px';

        // Reserve space for scripture reference
        var refReserve = ref ? 0.20 : 0;

        // Binary search for the largest font size that fits
        var lo = 10, hi = 400, best = lo;
        while (lo <= hi) {
          var mid = Math.floor((lo + hi) / 2);
          target.style.fontSize = mid + 'px';
          if (ref) ref.style.fontSize = Math.max(mid * 0.55, 20) + 'px';

          var availH = ref ? maxH * (1 - refReserve) : maxH;
          var fits = target.scrollHeight <= availH;

          if (fits) {
            best = mid;
            lo = mid + 1;
          } else {
            hi = mid - 1;
          }
        }
        target.style.fontSize = best + 'px';
        if (ref) ref.style.fontSize = Math.max(best * 0.55, 20) + 'px';

        // Restore visibility state
        if (!wasActive) {
          slide.classList.remove('active');
          slide.style.opacity = '';
          slide.style.transition = '';
        }
      }

      window.fitText = fitText;
    </script>
  </body>
</html>
