<%# _letter_group.html.erb - Renders a group of songs under a letter heading %>
<div id="letter-<%= letter %>" class="scroll-mt-16" data-letter-section="<%= letter %>">
  <div class="-mx-2 px-2 py-2 bg-base-100/95 border-b border-base-300">
    <h2 class="text-2xl font-extrabold text-primary px-2">
      <%= letter %> 
      <span class="badge badge-neutral align-middle ml-2"><%= songs.size %></span>
    </h2>
  </div>
  <div class="mt-2 flex flex-col gap-3">
    <%= render partial: 'songs/song', collection: songs, as: :song, cached: true %>
  </div>
</div>
